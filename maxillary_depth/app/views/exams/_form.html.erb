<%= form_for @exam, url: url, method: method,  remote: true do |form| %>

  <div class="form-row">
    <div class="form-group col-md-3">
      <%= form.label :point_n_x %>
      <%= form.text_field :point_n_x, class: "form-control" %>
    </div>            
    <div class="form-group col-md-3">
      <%= form.label :point_n_y %>
      <%= form.text_field :point_n_y, class: "form-control" %>
    </div>    
  </div>

  <div class="form-row">
    <div class="form-group col-md-3">
      <%= form.label :point_a_x %>
      <%= form.text_field :point_a_x, class: "form-control" %>
    </div>            
    <div class="form-group col-md-3">
      <%= form.label :point_a_y %>
      <%= form.text_field :point_a_y, class: "form-control" %>
    </div>    
  </div>

  <div class="form-row">
    <div class="form-group col-md-3">
      <%= form.label :point_po_x %>
      <%= form.text_field :point_po_x, class: "form-control" %>
    </div>            
    <div class="form-group col-md-3">
      <%= form.label :point_po_y %>
      <%= form.text_field :point_po_y, class: "form-control" %>
    </div>    
  </div>

  <div class="form-row">
    <div class="form-group col-md-3">
      <%= form.label :point_or_x %>
      <%= form.text_field :point_or_x, class: "form-control" %>
    </div>            
    <div class="form-group col-md-3">
      <%= form.label :point_or_y %>
      <%= form.text_field :point_or_y, class: "form-control" %>
    </div>    
  </div>
    
  <div class="actions">
    <%= form.submit nil, class: "btn btn-primary" %>
    <%= link_to 'Back', patient_path(@exam.patient_id), class: "btn btn-secondary", remote: true %>  
  </div>  
  <% end %>